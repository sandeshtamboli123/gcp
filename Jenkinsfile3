def secrets = [
  [path: 'secret/jenkins/github', engineVersion: 2, secretValues: [
    [envVar: 'USERNAME', vaultKey: 'username'],
    [envVar: 'PASSWORD', vaultKey: 'password'],
    ]],
]
def configuration = [vaultUrl: 'https://vault.default.svc.cluster.local:8200',  vaultCredentialId: 'vault-approle', engineVersion: 2]
                      
pipeline {
    agent any
    stages{ 
		  stage("git checkout"){
          steps{
            script{
          git(
            url: 'https://github.com/sandeshtamboli123/gcp.git',
            credentialsId: 'sandesh-github-pat',
            branch: 'main'
            )
            } 
          }
         }
  

      stage('Vault') {
        steps {
          withVault([configuration: configuration, vaultSecrets: secrets]) {
            sh "echo ${env.USERNAME}"
            sh "echo ${env.PASSWORD}"	
          }
        }  
      }
    }
}
